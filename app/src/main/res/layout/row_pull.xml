<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:elevation="60dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cover"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Autor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cover"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/username_label"
            android:text="Autor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_label"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Pull Request"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/username"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/pull_request_label"
            android:text="Pull Request"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pull_request_label"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Pull Request Date"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pull_request_name"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/pull_request_date_label"
            android:text="Pull Request Date"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_body_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pull_request_date"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Pull Request Body"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pull_request_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pull_request_date"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/pull_request_body_label"
            android:text="Pull Request Body"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>