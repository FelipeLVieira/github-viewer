<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemVH"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:elevation="60dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cover"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Autor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cover"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/username_label"
            android:text="Autor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repo_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Repositório"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/username"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/repo_name_label"
            android:text="Repositório"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stars_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repo_name_label"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Estrelas"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/repo_name"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/stars_label"
            android:text="Estrelas"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forks_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stars_label"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Forks"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/stars"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/stars_label"
            android:text="Forks"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/possui_issue_label"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cover"
            android:layout_below="@+id/cover"
            android:text="Possui pull requests?"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/possui_issue"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/possui_issue_label"
            android:layout_below="@+id/possui_issue_label"
            android:text="Possui pull requests?"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forks_label"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cover"
            android:text="Descrição"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/forks"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@+id/descricao_label"
            android:text="Descrição"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>